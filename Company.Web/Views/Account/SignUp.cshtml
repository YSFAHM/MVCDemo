@model SignUpViewModel;

@{
    ViewData["Title"] = "SignUp";
    Layout = "_AuthLayout";
    
}

<h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
<form asp-action="SignUp">

    <div class="row">
        <div class="col-md-6 mb-4">

            <div data-mdb-input-init class="form-outline">
                <input type="text" asp-for="FirstName" class="form-control form-control-lg" />
                <label class="form-label" asp-for="FirstName">First Name</label>
            </div>

        </div>
        <div class="col-md-6 mb-4">

            <div data-mdb-input-init class="form-outline">
                <input type="text" asp-for="LastName" class="form-control form-control-lg" />
                <label class="form-label" asp-for="LastName">Last Name</label>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="col-md-12 mb-4 pb-2">

            <div data-mdb-input-init class="form-outline">
                <input type="email" asp-for="Email" class="form-control form-control-lg" />
                <label class="form-label" asp-for="Email">Email</label>
            </div>

        </div>

        <div class="row">
            <div class="col-md-6 mb-4 pb-2">

                <div data-mdb-input-init class="form-outline">
                    <input type="password" asp-for="Password" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="Password">Password</label>
                </div>

            </div>
            <div class="col-md-6 mb-4 pb-2">

                <div data-mdb-input-init class="form-outline">
                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                    <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                </div>
            </div>

    </div>

        <div class="row">
            <div class="col-md-6 mb-4 pb-2">
                <div data-mdb-input-init class="form-outline">
                        <input type="checkbox" asp-for="IsAgree" class="form-check-input" />
                        <label asp-for="IsAgree" class="form-check-label">I agree to the terms and conditions</label>

                </div>

            </div>
        </div>


    <div class="mt-4 pt-2">
        <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" asp-action="SignUp" value="Submit" />
    </div>

</form>
</div>