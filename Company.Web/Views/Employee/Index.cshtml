@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Index";
}
<h1>All Employees</h1>
<a asp-action="Create" class="btn btn-outline-primary">Add Employee</a>

<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" method="get" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By Name"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Image)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Email)</th>
                <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/files/images/@employee.ImageUrl" class="rounded-circle" height="40" width="40"/>
                    </td>

                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <partial name="_ActionButtonsPartialView" model="@employee.Id.ToString()">
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There are no Employees</h3>
    </div>

}