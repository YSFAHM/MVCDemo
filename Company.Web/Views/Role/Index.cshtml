
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<h1>All Roles</h1>

<a asp-action="Create" class="btn btn-outline-primary">Create Role</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>

                    <partial name="_ActionButtonsPartialView" model="@role.Id.ToString()">
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There are no Roles</h3>
    </div>

}